<script>
function myFunction()
{
var x;

var idade=prompt("Digite sua idade:");

if (idade>=18)
  {
    x = "Voce e maior de idade!"
  }
  else{
    x = "Voce e menor de idade!"
  }

  document.getElementById("demo").innerHTML=x;
}
</script>

